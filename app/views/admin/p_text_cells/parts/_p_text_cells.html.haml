.p-text-cells
  %ul
    - p_text_cells.each do |p_text_cell|
      %li
        .show
          %span.title= link_to p_text_cell.title, admin_p_text_cell_path(p_text_cell)

          %span.show= link_to '显示', admin_p_text_cell_path(p_text_cell)
          %span.edit= link_to '编辑', edit_admin_p_text_cell_path(p_text_cell)
          %span.destroy= link_to '删除', admin_p_text_cell_path(p_text_cell), :method => :delete, :data => { :confirm => '确定要删除？' } 
          %span.copy= link_to '复制', 'javascript:;' 
          %span.up= link_to '向上移动', 'javascript:;'
          %span.down= link_to '向下移动', 'javascript:;'

        :ruby
          @child_cells = PTextCell.find(p_text_cell.id).children

        .child
          = render "admin/p_text_cells/parts/child_cells" ,:child_cells  => @child_cells