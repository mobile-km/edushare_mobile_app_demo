.page-admin-show
  .content
  
    .title
      .title= "主题"
      .desc= "描述"
      
    .text-cell
      .title
        = @p_text_cell.title
      .desc
        = @p_text_cell.desc

  .nav
    - @ancestors.each do |ancestor|
      .item
        .title= link_to ancestor.title, admin_p_text_cell_path(ancestor)

  .child-cells
    - @child_cells.each do |p_text_cell|
      .item
        .title= link_to p_text_cell.title, admin_p_text_cell_path(p_text_cell)
        .desc= p_text_cell.desc
        .attrs
          %a.add-new-attr{:href=>'javascript:;'} 增加属性

          .add-attr
            = form_tag("/admin/p_text_cells/save_attrs?id=#{p_text_cell.id}")  do
              
              .attr-list
                - if !p_text_cell.attrs.blank?
                  - p_text_cell.attrs.each do |attr|

                    :ruby
                      key = attr.keys.first
                      value = attr[key]
                    .item
                      %input{:name => "keys[]", :size => "20", :type => "text", :value => key}
                      %input{:name => "values[]", :size => "20", :type => "text", :value => value}

              .field.submit
                = button_to "保存", "javascript:;"


        .edit= link_to '编辑', edit_admin_p_text_cell_path(p_text_cell)
        .destroy= button_to '删除', admin_p_text_cell_path(p_text_cell), :method => :delete, :data => { :confirm => '确定要删除？' }
