:ruby
  important_notes = ImportantNote.all
  
.page-m1
  .page-show
    .header
      %h2= "重要词条页"
    .content
      - important_notes.each_with_index do |important_note,index|
        .list-item.important_note
          .title= link_to important_note.entry.title ,"/c3?id=#{index + 1}"
          .number= "标记 #{important_note.entry.number}次"
          .time= important_note.time
