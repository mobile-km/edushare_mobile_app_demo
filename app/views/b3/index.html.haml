:ruby
  entry_id = defined?(id) ? id : 1
  entry_id = 1 if entry_id > Entry.all.count
  entry = Entry.find(params[:id] || entry_id)
  coursewares = Courseware.all

= page_top_bar entry.title, '/b2'
= page_bottom_nav_entry
= render '/b3/parts/toast'
= render '/b3/parts/dialog'

.page-b3
  .page-show
    .title= entry.title
    .content= simple_format entry.content
    .related.hide
      .homeworks
        = link_to "相关作业", '/k3'
      .coursewares
        = link_to '相关课件', '/l3'

  .top.hide
    = render "/a1/parts/nav"
    .comments-link=link_to '评论', '/f1'
    .notebook-link=link_to '添加到笔记', 'javascript:;'

  .mark.hide
    .important
      =link_to "标记为重要", "javascript:;"
    .count{:data =>{:count=>entry.number} }

